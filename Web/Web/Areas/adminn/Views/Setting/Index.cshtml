@model List<Setting> 
    @{
        ViewData["Title"] = "Index";
        Layout = "~/Areas/adminn/Views/Shared/_Layout.cshtml";
    }

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <a class="btn btn-primary mb-3" asp-area="adminn" asp-controller="Setting" asp-action="create">Create</a>
            </div>
            <div class="col-log-12">
                <table class="table">
                    <thead>
                        <tr class="mr-2">
                            <th scope="col">#</th>
                            <th scope="col">Logo</th>
                            <th scope="col">Content</th>
                            <th scope="col">Title</th>
                            <th scope="col">AboutTitle1</th>
                            <th scope="col">AboutTitle2</th>
                            <th scope="col">Adress</th>




                        </tr>
                    </thead>
                    <tbody class="mr-2">
                        @{ int i = 0;}
                        @foreach (var item in Model )
                        {
                            i++;
                        <tr class="mr-2">
                            <th scope="row">@i</th>
                            <td>@item.Logo</td>
                            <td>@item.Content</td>
                            <td>@item.Title</td>
                            <td>@item.AboutTitle1</td>
                            <td>@item.AboutTitle2</td>
                            <td>@item.Adress</td>


                            <td>
                                <a class="btn btn-success" asp-area="adminn" asp-controller="blogCategory" asp-action="update">Update</a>
                                <a class="btn btn-danger" asp-area="adminn" asp-controller="blogCategory" asp-action="delete">Delete</a>

                            </td>
                        </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
